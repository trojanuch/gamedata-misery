[logic]
active = ph_door@open

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_game_timer = 50 | {=surge_started} ph_door@closed
on_info = {+pri_a22_close_kovalski_office_door -pri_a22_once_door_close} ph_door@closed %+pri_a22_once_door_close%
snd_open_start = metal_small_close_start
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = metal_small_close_start
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop